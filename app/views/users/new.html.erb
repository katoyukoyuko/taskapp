<h1><%= t('view.user.sign_up') %></h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, t('view.user.error')) %></h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>  
  <%= f.label t('view.user.name') %>
  <%= f.text_field :name %>
  <br>
  <%= f.label t('view.user.email') %>
  <%= f.email_field :email %>
  <br>
  <%= f.label t('view.user.password') %>
  <%= f.password_field :password %>
  <br>
  <%= f.label t('view.user.password_confirmation') %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit t('view.user.register') ,class: "btn btn-info" %>
<% end %>