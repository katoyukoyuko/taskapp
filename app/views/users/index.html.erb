<h1><%= t('view.user.user_lists') %></h1>

<table class="table">
    <thead>
        <tr class="table-info">
            <th><%= t('view.user.name') %></th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= link_to t('view.task.show_button'), user %></td>
                <td><%#= link_to t('view.task.edit_button'), edit_user_path() %></td>
                <td><%#= link_to t('view.task.destroy'), task, method: :delete, data: { confirm: t('view.task.destroy_confirm') } %></td>
            </tr>  
        <% end %>
    </tbody>
</table>

<p><%= link_to t('view.task.new_button'), new_user_path , class: "btn btn-info", type: "button" %></p>